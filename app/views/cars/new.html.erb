  <%= form_for @car, html: { multipart: true } do |f| %>

   <div class="form-group">
     <%= f.label :name %>
     <%= f.text_field(:name, {:class => "form-control"}) %>
   </div>

   <div class="form-group">
     <%= f.label :summary %>
     <%= f.text_area(:summary, {:class => "form-control"}) %>
   </div>
   
   <div class="form-group">
     <%= f.label :body %>
     <%= f.text_area(:body, {:class => "form-control"}) %>
   </div>

   <div class="form-group">
     <%= f.label :description %>
     <%= f.text_area(:description, {:class => "form-control"}) %>
   </div>

   <div class="form-group">
     <%= f.label :engine %>
     <%= f.text_field(:engine, {:class => "form-control"}) %>
   </div>

   <div class="form-group">
     <%= f.label :price %>
     <%= f.text_field(:price, {:class => "form-control"}) %>
   </div>
   <div class="form-group">
     <%= f.label :drive_unit %>
     <%= f.text_field(:drive_unit, {:class => "form-control"}) %>
   </div>

   <div class="form-group">
     <%= f.label :to100 %>
     <%= f.text_field(:to100, {:class => "form-control"}) %>
   </div>

   <div class="form-group">
     <%= f.label :maxspeed %>
     <%= f.text_field(:maxspeed, {:class => "form-control"}) %>
   </div>

   <div class="form-group">
     <%= f.submit  ({:class => 'btn btn-primary'})%>
     <%= link_to 'Назад',:back, class: 'btn btn-outline-secondary'%>
   </div>

  <% end %>
